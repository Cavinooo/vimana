load("@rules_pkg//pkg:mappings.bzl", "pkg_filegroup", "pkg_files")

pkg_filegroup(
    name = "templates",
    srcs = [
        ":files",
        ":tests",
    ],
    visibility = ["//operator/helm-charts/vimana:__pkg__"],
)

pkg_filegroup(
    name = "tests",
    srcs = ["//operator/helm-charts/vimana/templates/tests"],
    prefix = "tests/",
)

pkg_files(
    name = "files",
    srcs = glob(
        ["*"],
        allow_empty = True,
        exclude = ["BUILD.bazel"],
    ),
)
