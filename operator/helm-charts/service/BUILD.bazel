load("@rules_pkg//pkg:mappings.bzl", "pkg_filegroup", "pkg_files")

pkg_filegroup(
    name = "service",
    srcs = [
        ":files",
        ":templates",
    ],
    visibility = ["//operator/helm-charts:__pkg__"],
)

pkg_filegroup(
    name = "templates",
    srcs = ["//operator/helm-charts/service/templates"],
    prefix = "templates/",
)

pkg_files(
    name = "files",
    srcs = glob(
        ["*"],
        allow_empty = True,
        exclude = ["BUILD.bazel"],
    ),
)
