crate.spec(
    features = [
        "blocking",
        "json",
    ],
    package = "reqwest",
    version = "0.12.8",
)
crate.spec(
    features = [
        "macros",
        "rt-multi-thread",
        "signal",
        "sync",
    ],
    package = "tokio",
    version = "1.40.0",
)
crate.spec(
    features = ["net"],
    package = "tokio-stream",
    version = "0.1.16",
)
crate.spec(
    package = "tonic",
    version = "0.12.2",
)
crate.spec(
    package = "tower",
    version = "0.5.1",
